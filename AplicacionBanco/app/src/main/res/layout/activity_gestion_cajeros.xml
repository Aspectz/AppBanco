<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pojo.GestionCajerosActivity" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >
        <TextView
            android:id="@+id/label_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_below="@+id/label_direccion"
            android:ems="10" />
        <TextView
            android:id="@+id/label_latitud"
            android:layout_width="wrap_content"
            android:text="Latitud"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/direccion"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/latitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_below="@+id/label_latitud"
            android:ems="10"
            android:inputType="textMultiLine">
        </EditText>
        <TextView
            android:id="@+id/label_longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/latitud"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/longitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_longitud"
            android:ems="10">
        </EditText>
        <TextView
            android:id="@+id/label_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/longitud"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_zoom"
            android:ems="10"
            android:inputType="phone" >
        </EditText>
        <TextView
            android:id="@+id/label_cajeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zoom"
            android:layout_marginTop="20dp"
            android:text="Cajeros"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/cajeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_cajeros"
            android:ems="10"
            android:inputType="textEmailAddress"/>
        <LinearLayout
            android:id="@+id/botonera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cajeros"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/boton_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boton_cancelar" />
            <Button
                android:id="@+id/boton_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boton_guardar" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>